{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "editon",
  "version": "0.1.0",
  "identifier": "com.aldimenur.editon",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Editon",
        "width": 800,
        "height": 600,
        "decorations": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/1024x1024.png", "icons/1024x1024.icns", "icons/icon.ico"]
  },
  "plugins": {
    "updater": {
